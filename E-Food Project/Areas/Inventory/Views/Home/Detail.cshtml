@model EFood.Models.ViewModels.ShoppingCartVM
@using EFood.Utilities
@{
    ViewData["Title"] = "Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <main class="mt-3 pt-2">
        <div class="container mt-5">
            <input hidden asp-for="ShoppingCart.ProductId" />

            <div class="row">
                <div class="col-md-4 mb-4">
                    <img src="@DS.ImagesPath@Model.Product.Image" class="img-fluid mb-3" alt="" />
                    
                    <div class="row ">
                        <a asp-action="Index" class="btn btn-outline-primary ms-1">
                            Salir
                        </a>
                    </div>
                </div>


                <div class="col-md-6 mb-4">
                    <div class="p-4">
                        <div class="mb-3">
                            <span class="badge bg-dark p-2 me-2">@Model.Product.FoodLine.Name</span>
                        </div>
                        <div class="mb-3">
                            <strong style="font-size: 20px;">@Model.Product.Name</strong>
                        </div>

                        
                        <strong style="font-size: 20px;">@Model.Product.Description</strong>


                        <div class="row">
                            <div class="col-md-6">
                                <label>Precios</label>
                                <select asp-for="ShoppingCart.Price" asp-items="@Model.ProductPrices" class="form-select">
                                    <option disabled selected>-- Seleccione el Precio --</option>
                                </select>
                                <span asp-validation-for="ShoppingCart.Price" class="text-danger"></span>
                            </div>
                        </div>

                        
                        


                        <div class="d-flex justify-content-left mt-2">
                            <div class="form-outline me-1" style="width: 100px;">
                                <input asp-for="ShoppingCart.Amount" value="1" class="form-control" id="cantidadId" />
                            </div>
                            <button type="submit" class="btn btn-primary ms-1" id="btnAgregar">
                                Agregar al carro
                                <i class="bi bi-cart"></i>
                            </button>

                        </div>
                    </div>
                </div>
            </div>
        </div>


    </main>
</form>
