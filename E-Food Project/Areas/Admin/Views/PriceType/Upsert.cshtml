@model EFood.models.PriceType

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    var titulo = "Crear Tipo de Precio";

}

<form method="post">
    <div style="padding-left:15%; padding-right:15%; padding-bottom:inherit.4rem;">
        <div class="row border-0">
            <div asp-asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>

        @if (Model.Id !=0)
        {
            //Actualizar
            titulo= "Actualizar Tipo de Precio";
            <input type="hidden" asp-for="Id" id="id" />
        }
        <div class="col-12 border-bottom p-0">
            <h2 class="text-primary">@titulo</h2>
        </div>
        @if (Model.Id != 0)
        {
            <div class="row mb-2 mt-2">
                <div class="form-group col-md-6">
                <label>Id</label>
                <div id="Id" class="form-control">
                    @Model.Id
                </div>
            </div>
        </div>
        }

        <div class="row mb-2 mt-2">
            <div class="form-group col-md-6">
                <label>Nombre</label>
                <input type="text" asp-for="Name" class="form-control" placeholder="Nombre del Tipo de Precio" id="name"/>
                <span asp-validation-formaction="Name" class="text-danger"></span>
            </div>
        </div>

        <br />
        <div>
            @if (Model.Id !=0)
            {
                <partial name="_ButtonsUpdateBack" model="Model.Id"/>
            }
            else
            {
                <partial name="_ButtonsCreateBack" />
            }
        </div>


    </div>
    
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

    <script>

        document.getElementById("name").addEventListener('change', function () { 
            validateName();
        
        });

        function validateName() {
            var url = '@Url.Content("~/")' + "Admin/PriceType/NameValidate";
            var id = '#id';
            var name = '#name';
            
            $.getJSON(url, { id: $(id).val(), name: $(name).val() }, function (data) { 
                $.each(data, function (key, value) {
                    if (value) {
                        var name = document.getElementById("name");
                        swal("Error", "Nombre ya Existe", "error");
                        name.value = "";
                    }
                });
            })

        }

    </script>
}