@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-6">
        <h2 class="text-primary">Lista de Tarjetas del Procesador de pago: @ViewData["PaymentProcessorName"]</h2>
    </div>
    <div class="col-lg-6">
        <a class="btn btn-outline-primary" asp-action="Upsert" asp-route-idPaymentProcessor=@ViewData["PaymentProcessorId"]><i class="bi bi-plus-square-fill"></i> Agregar Tarjeta</a>
    </div>
</div>

<br />

<div class="p-4 border rounded bg-light">
    <table id="tblData" class="table table-responsive table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nombre Procesador</th>
                <th>Tarjeta</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/paymentProcessorCard.js"></script>
}
